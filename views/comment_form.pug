extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='com') Komentarz:
      input#com.form-control(type='text', placeholder='min. 2 litery' name='com' required value=(undefined===comment ? '' : comment.com) )
      
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg